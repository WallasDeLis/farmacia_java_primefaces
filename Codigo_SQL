--CODIGO SQL DB FARMACIA

--create database farmacia_db

-- *TABELA PRINCIPAL DE PRODUTOS* --
create table produto(
id_produto serial,
nome varchar(50),
preco real,
quantidade int,
tipo varchar(50),
descricao varchar(100),
primary key(id_produto));

-- $TABELA SECUNDARIA DE CLIENTES$ --
create table cliente(
id_cliente int,
nome varchar(50),
telefone real,
endereco varchar(50),
idade int,
primary key(id_cliente));

-- $TABELA DE LOGIN$ --
create table login(
id_login int,
usuario varchar(50),
senha int,
primary key(id_login));

-- * - TABELAS PRINCIPAIS
-- $ - TABELAS SECUNDARIAS

